<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_product_only_form_view" model="ir.ui.view">
      <field name="name">Product Product with SKU sequence</field>
      <field name="model">product.product</field>
      <field name="inherit_id" ref="product.product_normal_form_view"/>
      <field name="arch" type="xml">
        <xpath
          expr="//field[@name='default_code']"
          position="after"
          >
          <button
            type="object"
            name="refresh_sku"
            string="Refresh SKU"
            class="oe_right"
            colspan="2"
            />
        </xpath>
      </field>
    </record>

    <record id="product_variant_easy_edit_view" model="ir.ui.view">
      <field name="name">Product Variant with SKU sequence</field>
      <field name="model">product.product</field>
      <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
      <field name="arch" type="xml">
        <xpath
          expr="//field[@name='default_code']"
          position="after"
          >
          <button
            type="object"
            name="refresh_sku"
            string="Refresh SKU"
            class="oe_right"
            colspan="2"
            />
        </xpath>
      </field>
    </record>

</odoo>
